<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.resonanz.client.controller.Controller">

    <TextArea fx:id="mainArea" editable="false" VBox.vgrow="ALWAYS"></TextArea>
    <HBox>
        <TextField fx:id="messageField" HBox.hgrow="ALWAYS" onAction="#sendMessage"></TextField>
        <Button text="Send" onAction="#sendMessage"/>
    </HBox>
</VBox>
